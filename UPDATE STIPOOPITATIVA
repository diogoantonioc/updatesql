SELECT DISTINCT SGRADE.CODCOLIGADA, SGRADE.CODCURSO, SGRADE.CODGRADE, SGRADE.TIPOOPTATIVA, SCURSO.CODTIPOCURSO 
FROM SGRADE 
JOIN SCURSO (NOLOCK)
	ON SCURSO.CODCOLIGADA = SGRADE.CODCOLIGADA
	AND SCURSO.CODCURSO = SGRADE.CODCURSO
	
WHERE SGRADE.TIPOOPTATIVA NOT IN ('H','N','C')
 
 
 
 
UPDATE SGRADE SET TIPOOPTATIVA = 'H'
FROM SGRADE 
WHERE SGRADE.TIPOOPTATIVA NOT IN ('H','N','C')
 
